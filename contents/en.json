    "shortcutsCategories": {
        "Generic Shortcuts": {
            "description": "You can use these almost everywhere.",
            "shortcuts": [
                {
                    "keystrokes": ["Ctrl", "C"],
                    "description": "{C}opy the selected text."
                },
                {
                    "keystrokes": ["Ctrl", "X"],
                    "description": "Cut the selected text."
                },
                {
                    "keystrokes": ["Ctrl", "V"],
                    "description": "Paste the selected text."
                },
                {
                    "keystrokes": ["Ctrl", "ArrowRight"],
                    "description": "Move cursor to the end of the word.\n Use the left arrow to move it to the beginning."
                },
                {
                    "keystrokes": ["Shift", "ArrowRight"],
                    "description": "Move the cursor at right, and select the text. Can be done multiple times.\nYou can combine it with Ctrl, as explained above. It works the same for the left arrow."
                }
            ]
        },
        "Text Formatting": {
            "description": "You can basically use these ones in every text processing software.",
            "shortcuts": [
                {
                    "keystrokes": ["Ctrl", "B"],
                    "description": "Make the selected text {B}old."
                },
                {
                    "keystrokes": ["Ctrl", "I"],
                    "description": "Make the selected text {I}talic."
                },
                {
                    "keystrokes": ["Ctrl", "U"],
                    "description": "{U}nderlined the selected text."
                }
            ]
        },
        "Generic Applications Shortcuts": {
            "description": "We can consider these shortcuts generic. Therefore, they sometimes might not be implemented.",
            "shortcuts": [
                {
                    "keystrokes": ["Ctrl", "T"],
                    "description": "Open a new {T}ab."
                },
                {
                    "keystrokes": ["Ctrl", "W"],
                    "description": "Close the active tab or document."
                },
                {
                    "keystrokes": ["Ctrl", "Shift", "T"],
                    "description": "Reopen the last closed tab or document."
                },
                {
                    "keystrokes": ["Ctrl", "S"],
                    "description": "{S}ave the active document."
                },
                {
                    "keystrokes": ["Ctrl", "Shift", "S"],
                    "description": "{S}ave the active document as..."
                },
                {
                    "keystrokes": ["Ctrl", "E"],
                    "description": "{E}xport the active document."
                },
                {
                    "keystrokes": ["Ctrl", "Shift", "T"],
                    "description": "{E}xport the active document as..."
                },
                {
                    "keystrokes": ["Ctrl", "P"],
                    "description": "{P}rint the active document.\nFor example, you can try to print this cheatsheet !"
                },
                {
                    "keystrokes": ["Ctrl", "F"],
                    "description": "{F}ind a word in the active document."
                },
                {
                    "keystrokes": ["Ctrl", "Q"],
                    "description": "{Q}uit the application. (It only works for some apps)"
                }
            ]
        },
        "Video": {
            "description": "Some tips with video viewers.",
            "shortcuts": [
                {
                    "keystrokes": ["Space"],
                    "description": "Pause/Play the video."
                },
                {
                    "keystrokes": ["ArrowRight"],
                    "description": "Move forward. (5 seconds on YouTube)"
                },
                {
                    "keystrokes": ["ArrowLeft"],
                    "description": "Move backward (5 seconds on YouTube)."
                },
                {
                    "keystrokes": ["K"],
                    "description": "On YouTube, pause/play the video."
                },
                {
                    "keystrokes": ["J"],
                    "description": "On YouTube, move backward (10s).\n(it's because the J key is on the left of the K key)"
                },
                {
                    "keystrokes": ["L"],
                    "description": "On YouTube, move forward (10s).\n(it's because the J key is on the right of the K key)"
                }
            ]
        }
    }
